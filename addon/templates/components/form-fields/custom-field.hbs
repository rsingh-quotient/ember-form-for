{{#form-field this.propertyName
    class="custom-field"
    classNames=this.fieldClasses
    errorClasses=this.errorClasses
    hintClasses=this.hintClasses
    inputClasses=this.inputClasses
    labelClasses=this.labelClasses
    object=this.object
    form=this.form
    hint=this.hint
    label=this.label
    control=this.control
    update=(action this.update) as |f|}}
  {{#if this.component}}
    {{component this.component f=f}}
  {{else if this.hasBlock}}
    {{yield f}}
  {{else}}
    <f.label @required={{this.required}} />
    <f.control @accesskey={{this.accesskey}} @autocomplete={{this.autocomplete}} @autofocus={{this.autofocus}} @autosave={{this.autosave}} @dir={{this.dir}} @disabled={{this.disabled}} @hidden={{this.hidden}} @inputmode={{this.inputmode}} @lang={{this.lang}} @list={{this.list}} @max={{this.max}} @maxlength={{this.maxlength}} @min={{this.min}} @minlength={{this.minlength}} @multiple={{this.multiple}} @pattern={{this.pattern}} @placeholder={{this.placeholder}} @readonly={{this.readonly}} @required={{this.required}} @size={{this.size}} @spellcheck={{this.spellcheck}} @step={{this.step}} @tabindex={{this.tabindex}} @title={{this.title}} />
    {{f.errors}}
    {{f.hint}}
  {{/if}}
{{/form-field}}
